---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";

dayjs.extend(utc);

const { lastModified } = Astro.props;

const lastModifiedFormatted = dayjs()
  .utc(lastModified)
  .format("HH:mm:ss DD MMMM YYYY UTC");
---

<div class="pb-[1rem] px-[1rem] md:p-0 break-normal">
  <div class = "flex flex-row gap-x-4 items-start mt-2 text-xs text-slate-400">
    <div class="flex-auto">
      Made with <a href="https://github.com/nikitatran/astro-simple-resume">Simple Resume Theme</a>
    </div>

    <div class="text-right">Last updated {lastModifiedFormatted}</div>

  </div>
</div>