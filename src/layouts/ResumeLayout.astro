---
import "../styles.css";
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
import ResumeHeader from '../components/ResumeHeader.astro';
import jsonHeader from "../resume_sections/user_info.json";
const faviconPath = import.meta.env.BASE_URL === '/' ? import.meta.env.BASE_URL + jsonHeader.faviconFilePath : jsonHeader.faviconFilePath;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconPath} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{jsonHeader.pageTitle}</title> 
	</head>

	<NavBar />

	<div class = "resume-wrapper">
		<ResumeHeader jsonHeader = {jsonHeader}/>
		<article>
			<slot />
		</article>
	</div>

	<Footer />
	<BackToTop />
	<style></style>
</html>